HLT		0000	R
NOP		0001	R
LTA		0010	R*
ACA		0011	R
FCH		0100	R
NND		0101	R
ADD 	0110	R
SUB 	0111	R
RDV		1000	R
WRT		1001	R
DAT		1010	R
STR		1011	R
LOD		1100	J
BLT		1101	J
BEQ		1110	J
JMP		1111	J

BREAK

